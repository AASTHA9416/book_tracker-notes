<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="main.css">
    <title>Book Notes - Track Your Reading Journey</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
    <div class="user_list_form">
        <div style="flex: 1; display: flex; align-items: center; gap: 12px;">
            <span style="color: #a78bfa; font-weight: 600; font-size: 15px;">ğŸ“š All Books Library</span>
            <span style="color: #9ca3af; font-size: 14px;">Viewing books from all users</span>
        </div>
        <a href="/addBook" class="btn secondary" style="text-decoration: none;">+ Add New Book</a>
    </div> 
  

    <div id="books">
    <% books.forEach(function(book){ %>
        <form action="/books" method="post" class="book-card">
            <img src="<%= book.url %>" alt="Book Cover" loading="lazy" />
            <div class="meta">
                <div class="label">Added By</div>
                <div class="value" style="<%= book.owner_id === currentUserId ? 'color: #a78bfa; font-weight: 700;' : '' %>">
                    <%= book.owner_name %> <%= book.owner_id === currentUserId ? '(You)' : '' %>
                </div>
                <div class="label">Title</div>
                <div class="value"><%= book.title %></div>
                <div class="label">Author</div>
                <div class="value"><%= book.author %></div>
                <div class="label">About</div>
                <div class="value"><%= book.about %></div>
                <div class="label">Date</div>
                <div class="value"><%= new Date(book.curr_date).toLocaleDateString() %></div>
                <div class="label">Ratings</div>
                <div class="value">â­ <%= book.ratings %></div>
            </div>
            <div class="actions">
                <button class="btn" formaction="/notes" name="book_id" value="<%= book.id %>">ğŸ“ Notes</button>
                <% if (book.owner_id === currentUserId) { %>
                    <button class="btn secondary" formaction="/edit" name="book_id" value="<%= book.id %>">âœï¸ Edit</button>
                    <button class="btn danger" formaction="/delete" name="book_id" value="<%= book.id %>">ğŸ—‘ï¸ Delete</button>
                <% } else { %>
                    <button type="button" class="btn" disabled style="opacity: 0.5; cursor: not-allowed;" title="You can only edit your own books">ğŸ”’ Read Only</button>
                <% } %>
            </div>
        </form>
    <% }) %>
    </div>




  

    </div>
    <%- include("partials/footer.ejs") %>
</body>
</html>